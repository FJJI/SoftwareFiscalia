<p id="notice"><%= notice %></p>

<h1>Archivos de Procedimiento</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crime_files.each do |crime_file| %>
      <tr>
        <td><%= link_to 'Mostrar', crime_file %></td>
        <td><%= link_to 'Editar', edit_crime_file_path(crime_file) %></td>
        <td><%= link_to 'Borrar', crime_file, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo archivo de procedimiento', new_crime_file_path %>
