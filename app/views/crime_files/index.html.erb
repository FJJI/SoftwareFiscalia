<p id="notice"><%= notice %></p>

<h1>Crime Files</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crime_files.each do |crime_file| %>
      <tr>
        <td><%= link_to 'Show', crime_file %></td>
        <td><%= link_to 'Edit', edit_crime_file_path(crime_file) %></td>
        <td><%= link_to 'Destroy', crime_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

