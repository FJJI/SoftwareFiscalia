<p id="notice"><%= notice %></p>

<h1>Imputados</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @thiefs.each do |thief| %>
      <tr>
        <td><%= link_to 'Mostrar', thief %></td>
        <td><%= link_to 'Editar', edit_thief_path(thief) %></td>
        <td><%= link_to 'Borrar', thief, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Imputado', new_thief_path %>
