<h1>Crime Thiefs</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crime_thiefs.each do |crime_thief| %>
      <tr>
        <td><%= link_to 'Abrir', crime_thief %></td>
        <td><%= link_to 'Editar', edit_crime_thief_path(crime_thief) %></td>
        <td><%= link_to 'Eliminar', crime_thief, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

