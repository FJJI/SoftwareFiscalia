<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-3"></div>
<div class="col-6">

<% if signed_in? %>
  <% if current_user.Fiscal? || current_user.Carabinero?%>
    <h1>Procedimientos activos</h1>

    <table class="table table-striped table-dark table-responsive-sm">
      <thead>
        <tr>
          <th >Folio</th>
          <th >Fecha creación</th>
          <th >Nº Imputados</th>
          <th>Fecha modificación</th>
          <% if signed_in? %>
          <th>Editar</th>
          <th>Ver</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @crimes.each do |crime| %>
          <tr>
            <td><%= crime.id %></td>
            <td><%= crime.created_at.to_date %></td>
            <td><%= CrimeThief.where(crime_id:crime.id).count %></td>
            <td><%= crime.updated_at.to_date %></td>
            <% if signed_in? %>
              <%# if current_user.Carabinero? %>
              <td><a class="nav-link" <%= link_to "Editar", edit_crime_path(crime.id),:class => "btn btn-primary"%></a></td>
              <td><a class="nav-link" <%= link_to "Ver", crime_path(crime.id),:class => "btn btn-success"%></a></td>
              <%# end %>
            <% end %>
    <!--        <td><%#= link_to "Editar", edit_crime_path(crime.id),:class => "btn btn-primary"%></td>-->
    <!--        <td><%#= link_to "Ver", crime_path(crime.id),:class => "btn btn-success"%></td>-->
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
      <% if signed_in? %>
        <a class="nav-link float-right btn btn-success" <%= link_to 'Reportar', new_crime_path ,:style =>"color:black"%></a>
      <% else %>
      <% end %>
      <br>
      <br>

    <% if current_user.Carabinero?%>
      <h1>Carabineros en la unidad <%= current_user.name %></h1>
      <table class="table table-striped table-dark table-responsive-sm">
        <thead>
        <tr>
          <th >Nombre</th>
          <th >Contacto</th>
          <th >Email</th>
        </tr>
        </thead>

        <tbody>
        <% @cops.each do |cop| %>
          <tr>
            <td><%= cop.name %></td>
            <td><%= cop.phone %></td>
            <td><%= cop.email %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  <% end %>
  <% if current_user.Admin?%>
      <div class="d-flex position-fixed" id="sidebar-wrapper">
        <div class="list-group list-group-flush container-fluid">
          <a class="list-group-item list-group-item-action bg-dark text-white font-italic" <%=link_to "Agregar Usuario", new_user_url , :style => "color:white"%> </a>
          <a class="list-group-item list-group-item-action bg-dark text-white font-italic" <%=link_to "Agregar Carabinero", new_carabinero_path , :style => "color:white"%> </a>
        </div>
        <br>
        <div class="list-group list-group-flush container-fluid">
          <a class="list-group-item list-group-item-action bg-dark text-white font-italic" <%=link_to "Usuarios", root_path , :style => "color:white"%> </a>
          <a class="list-group-item list-group-item-action bg-dark text-white font-italic" <%=link_to "Carabineros", carabineros_path(@cops) , :style => "color:white"%> </a>
        </div>
      </div>
  <% end %>
<% end %>
</div>


<div class="col-3">
</div></div>