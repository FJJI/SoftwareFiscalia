<h1>Víctimas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crime_victims.each do |crime_victim| %>
      <tr>
        <td><%= link_to 'Abrir', crime_victim %></td>
        <td><%= link_to 'Editar', edit_crime_victim_path(crime_victim) %></td>
        <td><%= link_to 'Eliminar', crime_victim, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

