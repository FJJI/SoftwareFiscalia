<head>
  <h2 style="text-align: center; padding: 3%">Registrarse</h2>
</head>
<body>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container-fluid">
    <div class="row justify-content-center custom-margin">
      <div class="col-sm-6 col-md-4 ">
        <!-- Add bg-primary in form tag if want form background color-->
        <!--text-white if want text color white-->
        <div class="field">
          <%= f.label :email , "Correo electronico", class:"pl-2 font-weight-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
        </div>
        <div class="field">
          <%= f.label :name , "Nombre", class:"pl-2 font-weight-bold"%><br />
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :rut, "Rut", class:"pl-2 font-weight-bold" %><br />
          <%= f.text_field :rut, class: "form-control" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :job, "Ocupacion", class:"pl-2 font-weight-bold" %>
          <%= f.select(:job, raw('<option value="Carabinero">Carabinero</option><option value="Fiscal">Fiscal</option>'))%>
        </div>
        <br>
        <div class="field">
          <%= f.label :password , "Contrasena", class:"pl-2 font-weight-bold"%><br />
          <% if @minimum_password_length %>
            <em>(Minimo <%= @minimum_password_length %> caracteres)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control"%>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "Confirmar contrasena", class:"pl-2 font-weight-bold" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control"%>
        </div>
        <div class="actions">
          <%= f.submit "Registrarse", class: "btn btn-outline-success mt-3 btn-block shadow-sm font-weight-bold"%>
        </div>
        <div class="form-group">
          <%= render "devise/shared/links"%>
        </div>
      </div>
    </div>
  </div>
<% end %>
</body>