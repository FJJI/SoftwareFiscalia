<head>
  <h2 style="text-align: center; padding: 3%">Inicio de sesion</h2>
</head>
<body>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container-fluid">
    <div class="row justify-content-center custom-margin">
      <div class="col-sm-6 col-md-4 ">
        <!-- Add bg-primary in form tag if want form background color-->
        <!--text-white if want text color white-->
        <div class="field">
          <%= f.label :email , "Correo electronico", class:"pl-2 font-weight-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
        </div>
        <div class="field">
          <%= f.label :password , "Contrasena", class:"pl-2 font-weight-bold"%><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control"%>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me , class: "check-input"%>
            <%= f.label :remember_me , class: "check-label"%>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Ingresar", class: "btn btn-outline-success mt-3 btn-block shadow-sm font-weight-bold"%>
        </div>
        <div class="form-group">
          <%= render "devise/shared/links"%>
        </div>
      </div>
    </div>
  </div>
<% end %>
</body>