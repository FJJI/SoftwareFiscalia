<p id="notice"><%= notice %></p>

<div class="col-6 mx-auto">
<h1>Fiscals</h1>

<table class="table table-striped table-dark table-responsive-sm">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Direccion</th>
    <th>E-mail</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @fiscals.each do |fiscal| %>
      <tr>
        <td><%= fiscal.name %></td>
        <td><%= fiscal.phone %></td>
        <td><%= fiscal.address %></td>
        <td><%= fiscal.email %></td>
        <td><%= link_to 'Show', fiscal, :class => "btn btn-primary" %></td>
<!--        <td><%#= link_to 'Edit', edit_fiscal_path(fiscal) %></td>-->
        <td><%= link_to 'Destroy', fiscal, :class => "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <a class="nav-link float-right btn btn-success" <%= link_to 'Nuevo Fiscal', new_fiscal_path ,:style =>"color:black"%> </a>
</div>